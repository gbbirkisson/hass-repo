{
    "name": "XComfort",
    "version": "0.1",
    "slug": "xcomfort",
    "description": "Eaton XComfort to MQTT gateway",
    "startup": "application",
    "boot": "auto",
    "arch": [
        "aarch64",
        "amd64",
        "armhf",
        "armv7",
        "i386"
    ],
    "privileged": [
        "SYS_MODULE",
        "SYS_RAWIO"
    ],
    "devices": [
        "/dev/bus/usb:/dev/bus/usb:rwm",
        "/dev/mem:/dev/mem:rw"
    ],
    "map": [
        "config"
    ],
    "options": {
        "mqtt_host": "hassio.local",
        "mqtt_user": "username",
        "mqtt_pass": "password"
    },
    "schema": {
        "mqtt_host": "str",
        "mqtt_user": "str",
        "mqtt_pass": "str"
    }
}